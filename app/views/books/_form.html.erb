    <%= form.label :description %><br />
    <%= form.text_area :description %>
  </div>
  <div class="field">
    <%= form.label :isbn %><br />
    <%= form.text_field :isbn %>
  </div>
  <div class="field">
    <%= form.label :publishing_date %><br />
    <%= form.date_select :publishing_date %>
  </div>
