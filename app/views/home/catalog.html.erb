<h1><%= t('.title') %></h1>

<%= will_paginate @books %>

<% @books.each do |book| %>
  <div class="row book-row">
    <div class="span12">
      <h3 class="title"><%= book.title %></h3>
      <div class="row">
        <div class="span8">
          <p><%= book.description %></p>
        </div>
        <div class="span4">
          <dl class="dl-horizontal book-details-list">
            <dt><%= t('.pages') %></dt><dd class="pages"><%= book.pages %></dd>
            <dt><%= t('.published') %></dt><dd class="publishing-date"><%= book.publishing_date %></dd>
            <dt><%= t('.isbn') %></dt><dd class="isbn"><%= book.isbn %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= will_paginate @books %>